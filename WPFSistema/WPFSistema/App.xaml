<Application x:Class="WPFSistema.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPFSistema"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Window" x:Key="estiloJanela">
            <Setter Property="Height" Value="471.532" /> 
            <Setter Property="Width" Value="733.022"/>
        </Style>
        <Style TargetType="Button" x:Key="estiloButton">
            <Setter Property="Width" Value="127"/>
            <Setter Property="Height" Value="32"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="estiloTextBlock">
            <Setter Property="Width" Value="100" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontFamily" Value="Arial" />
        </Style>

    </Application.Resources>
</Application>
